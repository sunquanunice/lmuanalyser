<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="StartLMU">
            <command
                  commandId="fr.unice.retro.StartMenu.command"
                  label="launch LMU"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate>
                        <or>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
                              <or>
                                 <test
                                       property="org.eclipse.core.resources.extension"
                                       value="java">
                                 </test>
                                 <test
                                       property="org.eclipse.core.resources.extension"
                                       value="jar">
                                 </test>
                              </or>
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.internal.core.JarPackageFragmentRoot">
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.internal.core.CompilationUnit">
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.internal.core.JavaProject">
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.internal.core.PackageFragment">
                           </adapt>
                           <adapt
                                 type="org.eclipse.core.resources.IProject">
                           </adapt>
                           <adapt
                                 type="org.eclipse.core.resources.IFolder">
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.internal.core.PackageFragmentRoot">
                           </adapt>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="lmuanalyser.MyHandler"
            commandId="fr.unice.retro.StartMenu.command">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="fr.unice.retro.StartMenu.command"
            name="StartLMU">
      </command>
      <command
            id="lmuanalyser.command1"
            name="Test ">
      </command>
   </extension>

</plugin>
